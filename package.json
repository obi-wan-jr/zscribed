{
  "name": "dscribe",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node server/index.js",
    "dev": "NODE_ENV=development node server/index.js",
    "build:css": "tailwindcss -i public/styles.css -o public/styles.build.css --minify",
